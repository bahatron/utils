        "moduleResolution": "node",
        "module": "CommonJS",
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "diagnostics": true,
        "incremental": true,
        "sourceMap": true,
        "outDir": "lib",
        "strict": true,
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}